<div id="wrapper">
   <div id="sidebar-wrapper">
      <% if user_signed_in? %>
      <div class="form-group">
         <span>Здравствуйте, <%= current_user.email %></span>
         <%= link_to 'Выйти', destroy_user_session_path, :method => :delete %>
         <% else %>
         <%= link_to 'Войти', new_user_session_path %> или <%= link_to 'Зарегистрироваться', new_user_registration_path %>
         <% end %>
         <h1>Tweets</h1>
         <table>
            <thead>
               <tr>
                  <th>Name</th>
                  <th colspan="3"></th>
               </tr>
            </thead>
            <tbody>
               <% @tweets.each do |tweet| %>
               <tr>
                  <td><%= tweet.name %></td>
                  <td><%= link_to 'Show', tweet %></td>
                  <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
                  <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
               </tr>
               <% end %>
            </tbody>
         </table>
         <br>
         <div class="new_tweet">
            <%= link_to 'New Tweet', new_tweet_path %>
         </div>
         <form method="get" id="twitsform" action="javascript:void(null);" onsubmit="call()">
            <label for="Twitter account">Twitter account</label>
            <select class="form-control" id="select" name="select">
               <% @tweets.each do |tweets| %>
               <option value="<%= tweets.name %>"><%= tweets.name %></option>
               <% end %>
            </select>
      </div>
      <div class="form-group">
      <label for="Action">Action</label>
      <select class="form-control" id="select_action" name="select_action" onchange="this.value.includes('i')?document.getElementById('Tag').style.display='':document.getElementById('Tag').style.display='none'">
      <option>follow</option>
      <option>unfollow</option>
      <option>retweeting</option>
      <option>posting</option>
      <option>parsering</option>
      <option>acc-parsering</option>
      <option>follow-hands</option>
      </select>
      <!-- <label for="Tags">Tags</label> -->
      <textarea class="form-control" id="Tag" name="tag" rows="3" style="display: none; margin-top:1em;"></textarea>
      <button id="btnSubmit" type="submit" class="btn btn-default" style="margin-top:1em;">Go ahead</button>
      </form>
      </div>
   </div>
   <!-- Page Content -->
   <div id="page-content-wrapper">
      <div class="container-fluid">
         <button href="#menu-toggle" class="btn btn-default" id="menu-toggle" style="margin-top:-3em;">Toggle Menu</a></button>
      </div>
   </div>
   <!-- /#page-content-wrapper -->
</div>
<script type="text/javascript" src="/js/ajax.js"></script>
<!-- Menu Toggle Script -->
<script>
   $("#menu-toggle").click(function(e) {
       e.preventDefault();
       $("#wrapper").toggleClass("toggled");
   });
</script>
